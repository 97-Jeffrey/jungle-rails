<section class="user-new">
  <h1>Join Jungle</h1>
  <div class="form-group">
    <%= form_for :user, url: '/users' do |f| %>

      <label>First Name</label>
      <input type="name" class="form-control" <%= f.text_field :first_name %>

      <label>Last Name</label>
      <input type="name" class="form-control" <%= f.text_field :last_name %>
      
      <label>Email</label>
      <input type="email" class="form-control" <%= f.text_field :email %>

      <label>Password</label>
      <input type="password" class="form-control" <%= f.password_field :password %>
      
      <label>Password Confirmation</label>
      <input type="password" class="form-control" <%= f.password_field :password_confirmation %>
      <br>
      <button type="submit" class="btn btn-primary" <%= f.submit %>Submit</button>

    <% end %>
  </div>
</section>